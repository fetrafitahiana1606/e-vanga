		<header class="mb-4">
			<h3>New products</h3>
		</header>

		<!-- Ici, vous pouvez ajouter le code HTML autour de la boucle de produits -->
		<div class="row">
			{% for produit in produits %}
				<div class="col-lg-3 col-md-6 col-sm-6 d-flex">
					<div class="card w-100 my-2 shadow-2-strong">
						<img src="{{ produit.image }}" class="card-img-top" style="aspect-ratio: 1 / 1"/>
						<div class="card-body d-flex flex-column">
							<h5 class="card-title">{{ produit.nom }}</h5>
							<p class="card-text">{{ produit.prix }}</p>
							<div class="card-footer d-flex align-items-end pt-3 px-0 pb-0 mt-auto">
								<a href="{{ path('app_cart_add', {'id': produit.id}) }}" class="btn btn-primary shadow-0 me-1">
									<i class="fas fa-shopping-cart"></i>
								</a>
								<a href="#!" class="btn btn-light border px-2 pt-2 icon-hover">
									<i class="fas fa-heart fa-lg text-secondary px-1"></i>
								</a>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
</section>
